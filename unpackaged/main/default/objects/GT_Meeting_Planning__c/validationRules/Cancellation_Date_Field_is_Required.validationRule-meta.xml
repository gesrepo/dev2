<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cancellation_Date_Field_is_Required</fullName>
    <active>true</active>
    <description>Please enter the Cancellation date if cancelled.</description>
    <errorConditionFormula>AND(( Cancelled__c ),
ISBLANK( Cancellation_Date__c))</errorConditionFormula>
    <errorDisplayField>Cancellation_Date__c</errorDisplayField>
    <errorMessage>Please enter the Cancellation date.</errorMessage>
</ValidationRule>
