<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rule_For_Archived_Status</fullName>
    <active>true</active>
    <description>Rule for Archived Status.</description>
    <errorConditionFormula>AND(ISPICKVAL(Status__c , &#39;Archived&#39;),(Previous_Status__c = &#39;Archived&#39;))</errorConditionFormula>
    <errorMessage>The task is currently Archived. All Edits are not allowed until object is released from Archived.</errorMessage>
</ValidationRule>
