<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rule_For_Approved_Status</fullName>
    <active>false</active>
    <description>Rule for Approved Status.</description>
    <errorConditionFormula>AND(ISPICKVAL(Status__c , &#39;GES Approved&#39;),(Previous_Status__c = &#39;GES Approved&#39;))</errorConditionFormula>
    <errorMessage>The task is currently Approved. All Edits are not allowed until object is released from Approved.</errorMessage>
</ValidationRule>
