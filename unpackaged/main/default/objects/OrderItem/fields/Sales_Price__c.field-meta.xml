<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Sales_Price__c</fullName>
    <description>Shows final price after applying discount.</description>
    <formula>IF(Discount__c&gt;0,(UnitPrice*Quantity)-(UnitPrice*Quantity*Discount__c),UnitPrice*Quantity)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Shows final price after applying discount.</inlineHelpText>
    <label>Sales Price</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <type>Currency</type>
</CustomField>
