<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cancelled_Date_Field_is_Required</fullName>
    <active>true</active>
    <description>Cancellation Date is required when Cancelled check box is checked.</description>
    <errorConditionFormula>AND(( Canceled__c ), 
ISBLANK(Cancelled_Date__c ))</errorConditionFormula>
    <errorDisplayField>Cancelled_Date__c</errorDisplayField>
    <errorMessage>Please enter the Cancellation date.</errorMessage>
</ValidationRule>
