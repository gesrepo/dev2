<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Incentive_Maximum</fullName>
    <active>true</active>
    <description>Ensure that an individual incentive record does not exceed 100%.</description>
    <errorConditionFormula>Incentive__c  &gt; 1.00</errorConditionFormula>
    <errorDisplayField>Incentive__c</errorDisplayField>
    <errorMessage>An individual incentive cannot exceed 100%.</errorMessage>
</ValidationRule>
