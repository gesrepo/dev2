                    <div class="slds-form-element__control">
                      <div class="gc-relative">
                        <apex:inputField required="true" value="{!vot.Order__c}" styleClass="gc-lookup" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
            <!-- /GENERAL INFORMATION -->
            <!-- VENDOR -->
