                          <apex:actionSupport event="onchange" action="{!filterVendors}" rerender="vendor1" status="loadVendorsSpinner">
                            <apex:param name="vendor1Select" value="Vendor1" assignTo="{!vendorSelect}"/>
                          </apex:actionSupport>
                        </apex:selectList>
