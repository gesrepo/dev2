                </div>
              </div>
              <div class="slds-col slds-no-flex">
                <div class="slds-grid">
                  <div class="slds-button">
                    <apex:commandButton action="{!saveRecord}" value="Save" id="saveRecord" styleClass="slds-button slds-button--brand gc-teal-button" />
