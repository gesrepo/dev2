                  </div>
                </div>
              </div>
            </div>
          </div>
          <apex:actionStatus id="loadVendorsSpinner">
            <apex:facet name="start">
              <c:GC_Community_StatusSpinner statusMessage="Loading Vendors." />  
            </apex:facet>
          </apex:actionStatus>

